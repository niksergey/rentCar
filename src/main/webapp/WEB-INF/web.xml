<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
  http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Rent Car Web Application</display-name>
    <context-param>
        <param-name>log4jConfiguration</param-name>
        <param-value>WEB-INF/log4j2.xml</param-value>
    </context-param>
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>main.controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>main.controllers.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>listCarsServlet</servlet-name>
        <servlet-class>main.controllers.ListCarsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listCarsServlet</servlet-name>
        <url-pattern>/car/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>listCarModelsServlet</servlet-name>
        <servlet-class>main.controllers.ListCarModelsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listCarModelsServlet</servlet-name>
        <url-pattern>/carmodel/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>listRentServlet</servlet-name>
        <servlet-class>main.controllers.ListRentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listRentServlet</servlet-name>
        <url-pattern>/rent/list</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>WhiteList</filter-name>
        <filter-class>main.controllers.filters.WhiteList</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>WhiteList</filter-name>
        <servlet-name>listCarsServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>WhiteList</filter-name>
        <servlet-name>listCarModelsServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>WhiteList</filter-name>
        <servlet-name>listRentServlet</servlet-name>
    </filter-mapping>
    <filter>
        <filter-name>SignList</filter-name>
        <filter-class>main.controllers.filters.SignUpFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SignList</filter-name>
        <servlet-name>SignUpServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SignList</filter-name>
        <servlet-name>SignInServlet</servlet-name>
    </filter-mapping>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>WEB-INF/beans.xml</param-value>
    </context-param>
</web-app>
